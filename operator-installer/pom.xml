<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>codeready-workspaces</artifactId>
        <groupId>com.redhat</groupId>
        <version>1.2.0.GA-SNAPSHOT</version>
    </parent>
    <groupId>com.redhat</groupId>
    <artifactId>codeready-workspaces-operator-installer</artifactId>
    <version>1.2.2.GA</version>
    <packaging>pom</packaging>
    <name>CodeReady Workspaces :: Operator Installer</name>
    <properties>
        <!-- TODO: switch to 1.x branch, or a tag -->
        <cheOperatorBranchOrTag>1.x</cheOperatorBranchOrTag>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>${project.basedir}/src/assembly/assembly.xml</descriptor>
                    </descriptors>
                    <tarLongFileMode>posix</tarLongFileMode>
                    <finalName>codeready-workspaces-${project.version}-operator-installer</finalName>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <!--clean-up build folders-->
                    <execution>
                        <id>clean-up</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <delete dir="${basedir}/target"/>
                            </tasks>
                        </configuration>
                    </execution>

                    <execution>
                        <id>copy-installer-files</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${basedir}/target/codeready-workspaces-operator-installer"/>

                                <!-- get yaml files from che-operator repo -->
                                <get 
                                    dest="${basedir}/cluster_role.yaml" 
                                    src="https://raw.githubusercontent.com/eclipse/che-operator/${cheOperatorBranchOrTag}/deploy/cluster_role.yaml" 
                                    usetimestamp="true" 
                                    verbose="false" />
                                <replaceregexp file="${basedir}/cluster_role.yaml"
                                    match="che-operator"
                                    replace="codeready-operator"
                                    byline="true"/>

                                <get 
                                    dest="${basedir}/cluster_role_binding.yaml" 
                                    src="https://raw.githubusercontent.com/eclipse/che-operator/${cheOperatorBranchOrTag}/deploy/cluster_role_binding.yaml" 
                                    usetimestamp="true" 
                                    verbose="false" />
                                <replaceregexp file="${basedir}/cluster_role_binding.yaml"
                                    match="che-operator"
                                    replace="codeready-operator"
                                    byline="true"/>
                                <replaceregexp file="${basedir}/cluster_role_binding.yaml"
                                    match="namespace: che"
                                    replace="namespace: codeready"
                                    byline="true"/>

                                <echo message="Copying files ..."/>
                                <copy todir="${basedir}/target/codeready-workspaces-operator-installer/">
                                    <fileset dir="${basedir}" includes="**/cluster_role.yaml, **/cluster_role_binding.yaml, **/custom-resource.yaml, **/*.sh, **/README.adoc"/>
                                </copy>
                                <chmod dir="${basedir}/target/codeready-workspaces-operator-installer/" includes="**/*.sh" perm="775"/>
                            </target>
                        </configuration>
                    </execution>

                    <execution>
                        <id>duplicate-tarball</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="${basedir}/target/codeready-workspaces-${project.version}-operator-installer.tar.gz" tofile="${basedir}/target/${project.artifactId}.tar.gz"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
